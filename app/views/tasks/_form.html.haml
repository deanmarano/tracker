= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :template_id
    = f.number_field :template_id
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :state_id
    = f.number_field :state_id
  .field
    = f.label :index
    = f.number_field :index
  .field
    = f.label :points
    = f.number_field :points
  .actions
    = f.submit 'Save'
